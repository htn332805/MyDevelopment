# Framework0 Context Server Environment Configuration
#
# This file contains environment variables for Docker Compose deployment.
# Copy this to .env and customize values for your environment.

# === Server Configuration ===
CONTEXT_SERVER_PORT=8080              # Port for context server
CONTEXT_LOG_LEVEL=INFO               # Log level: DEBUG, INFO, WARNING, ERROR
CONTEXT_DASHBOARD_ENABLED=true       # Enable built-in web dashboard
CONTEXT_WEBSOCKET_ENABLED=true       # Enable WebSocket support

# === Context Storage ===
CONTEXT_MAX_HISTORY=10000            # Maximum history entries to keep
CONTEXT_AUTO_CLEANUP=true            # Enable automatic cleanup

# === Dashboard Configuration ===
CONTEXT_DASHBOARD_PORT=8050          # Port for separate dashboard service
DASH_DEBUG=false                     # Enable Dash debug mode

# === Monitoring Configuration (optional) ===
PROMETHEUS_PORT=9090                 # Prometheus metrics port
GRAFANA_PORT=3000                    # Grafana dashboard port
GRAFANA_ADMIN_USER=admin             # Grafana admin username
GRAFANA_ADMIN_PASSWORD=admin         # Grafana admin password

# === Security Settings ===
# CONTEXT_API_KEY=your-secret-key    # API key for authentication
# CONTEXT_API_KEY_REQUIRED=false     # Require API key for requests

# === Advanced Settings ===
# CONTEXT_WORKERS=1                  # Number of worker processes
# CONTEXT_MAX_CONNECTIONS=100        # Maximum concurrent connections
# CONTEXT_BACKUP_ENABLED=false       # Enable context backups